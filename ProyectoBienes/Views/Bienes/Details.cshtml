@model ProyectoBienes.Models.Bienes

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-7">

                <section id="loginForm">
                    <h4>Bienes</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Ubicacion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Ubicacion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Precio)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Precio)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Comentario)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Comentario)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Estado)
                        </dd>



                    </dl>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </section>
                </div>
                    <div class="col-lg-6">
                        @if (Model.Files.Any(f => f.FileType == ProyectoBienes.Models.FileType.Imagen))
                        {
                            <section id="socialLoginForm">
                                <p>Imagen</p>

                                <div>
                                    <img style="width: 400px; height: 400px;" src="~/File?id=@Model.Files.First(f => f.FileType == ProyectoBienes.Models.FileType.Imagen).FileId" alt="avatar" />
                                </div>

                            </section>
                        }

                    </div>
          
            
        </div>
    </div>
</div>