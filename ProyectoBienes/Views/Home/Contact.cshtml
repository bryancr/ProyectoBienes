@model ProyectoBienes.Models.EmailModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

}
<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <h2>Contatenos.</h2>
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    <h4>Envienos sus comentarios.</h4>

                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })

                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.FromName, new { @class = "col-xs-6" })

                                @Html.ValidationMessageFor(m => m.FromName)

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })

                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.FromEmail, new { @class = "col-xs-6" })

                                @Html.ValidationMessageFor(m => m.FromEmail)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Message, new { @class = "col-md-2  control-label" })

                            <div class="col-md-10">
                                @Html.TextAreaFor(m => m.Message, new { @class = "col-xs-6" })

                                @Html.ValidationMessageFor(m => m.Message)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-success" value="Enviar" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>  
